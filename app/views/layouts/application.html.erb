<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-custom">
      <div class="container-fluid">   
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/posts">DojoForum</a>
          <a class="navbar-brand" href="/pages/feed">Feed</a>
          <a class="navbar-brand" href="/posts/new">New Post</a>      
        </div>

          <ul class="pull-right text-right nav navbar-nav">
            <li class="notice navbar-text"><%= notice %></li>
            <li class="alert navbar-text"><%= alert %></li>             
            <% if current_user %>
            <li><p class="navbar-text">Hi, <%= current_user.email %></p></li> 
              <% if current_user.admin? %>
                <li><%= link_to 'Admin Panel', admin_root_path %></li>                
              <% end %>                          
              <li><%= link_to 'Profile', mypost_user_path(current_user) %></li> 
              <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
              <li><%= link_to('修改密碼', edit_user_registration_path) %></li>
            <% else %>
              <li><%= link_to('註冊', new_user_registration_path) %></li>
              <li><%= link_to('登入', new_user_session_path) %></li>
            <% end %>
          </ul>
        </div>
    </nav>
    <%= yield %>
  </body>
</html>
