 <div class="col-md-12"> 
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name , class: "form-control" %>
    </div>
    <div class="form-group">
      <label>簡介：</label>
      <%= f.text_area :intro, :maxlength => 250, :cols => "10", :rows => "5", class: "form-control" %>
    </div>
    <div class="form-group">    
        <%= image_tag @user.avatar, width: "150px"  if @user.avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
