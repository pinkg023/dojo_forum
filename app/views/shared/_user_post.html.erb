    <table class="table">
      <% @posts.each do |post| %>
        <tr>          
          <td><%= link_to post.title.truncate(100), post_path(post) %><% if current_user == post.user %><%= link_to "Delete", post_path(post), method: :delete, class: "btn btn-info pull-right" %><% end %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </table>
    